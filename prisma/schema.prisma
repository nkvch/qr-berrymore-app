generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model Employee {
  id             Int      @id @default(autoincrement())
  firstName      String   @db.VarChar(50) @map("first_name")
  lastName       String   @db.VarChar(50) @map("last_name")
  berryId        String   @db.VarChar(36) @map("berry_id")
  photoPath      String?  @db.VarChar(255) @map("photo_path")

  historyRecords History[]

  @@map("employees")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique(map: "username") @db.VarChar(255)
  password  String   @db.VarChar(100)
  email     String?  @unique(map: "email") @db.VarChar(50)
  firstName String   @db.VarChar(50) @map("first_name")
  lastName  String   @db.VarChar(50) @map("last_name")

  @@map("users")
}

model Product {
  id             Int      @id @default(autoincrement())
  productName    String   @unique(map: "product_name") @db.VarChar(50) @map("product_name")
  productPrice   Float    @db.Float @map("product_price")
  photoPath      String?  @db.VarChar(255) @map("photo_path")

  historyRecords History[]

  @@map("products")
}

model History {
  id          Int       @id @default(autoincrement())
  employeeId  Int       @map("employee_id")
  productId   Int       @map("product_id")
  amount      Float     @db.Float
  dateTime    DateTime  @db.DateTime() @map("date_time")

  employee    Employee  @relation(fields: [employeeId], references: [id])
  product     Product   @relation(fields: [productId], references: [id])

  @@map("history")
}